<p id="notice"><%= notice %></p>

<h1>Connections</h1>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Account</th>
      <th>Notes</th>
     
      <th>Contact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @connections.each do |connection| %>
      <tr>
        <td><%= connection.created_at.strftime("%I:%M%p on %m/%d/%Y") %></td>
        <td><%= connection.account.company_name %></td>
        <td><%= connection.notes %></td>
       
        <td><%= link_to 'Show', connection %></td>
        <td><%= link_to 'Edit', edit_connection_path(connection) %></td>
        <td><%= link_to 'Destroy', connection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

