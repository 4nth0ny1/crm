<p id="notice"><%= notice %></p>

<div class="show-container">
  <div class="home-container">
        
        <h2><strong><%= @product.name %></strong></h2>
        
        <p><strong>Description: </strong><%= @product.description %></p>


        

        <p><strong>Price: $</strong><%= @product.price %></p>
        <%= link_to 'Edit', edit_product_path(@product), class:"btn btn-warning" %> 
        <%= link_to 'Destroy', @product, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>


    </div>

  <div class="comment-container">
        <div class="head-container">
          <h3>Comments</h3>
          <%= link_to 'Add Comment', new_product_comment_path(@product), class:"btn btn-info" %> 
        </div>

              <table class="table">
                <thead>
                  <tr>
                    <th>Date</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>User</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @product.comments.each do |comment| %>
                    <tr>
                      <td><%= comment.created_at.strftime("%m/%d/%Y @ %I:%M%p") %></td>
                      <td><%= comment.title %></td>
                      <td><%= comment.description %></td>
                      <td><%= comment.user.name %></td>
                      <td><%= link_to 'Show', comment %></td>
                      <td><%= link_to 'Reply', new_comment_reply_path(@comment) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>

</div>