<p id="notice"><%= notice %></p>
<div class="show-container">
  <div class="home-container">
    <h2><strong><%= @product.name %></strong></h2>
    
    <p><strong>Description: </strong><%= @product.description %></p>

    <p><strong>Price: </strong><%= number_to_currency(@product.price) %></p>
    <%= link_to 'Edit', edit_product_path(@product), class:"btn btn-warning" %> 
    <%= link_to 'Destroy', @product, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
  <div class="comment-container">
    <div class="head-container">
      <h3>Comments</h3>
      <%= link_to 'Add Comment', new_product_comment_path(@product), class:"btn btn-info" %> 
    </div>
    <div class="container">
          <div class="text-left">
            <div class="row">
              <div class="col">
                Date
              </div>
              <div class="col">
                Title
              </div>
              <div class="col">
                Description
              </div>
              <div class="col">
                User
              </div>
              <div class="col">
                Action
              </div>

            </div>
            <hr>
            <% @product.comments.each do |comment| %>
              <div class="row">
                <div class="col">
                  <p><%= comment.created_at.strftime("%m/%d/%Y @ %I:%M%p") %></p>
                </div>
                <div class="col">
                  <p><%= comment.title %></p>
                </div>
                <div class="col">
                  <p><%= comment.description %></p>
                </div>
                <div class="col">
                  <p><%= comment.user.name %></p>
                </div>
                <div class="col">
                  <%= link_to 'Show', comment %> | 
                  
                  <%= link_to 'Reply', new_comment_reply_path(comment) %>
                </div>
              </div>


              <% if comment.replies.exists? %>
                <div class="text-indent">
              
                  <div class="row">
                    <div class="col">
                      Reply
                    </div>
                    <div class="col">
                      User
                    </div>
                    <div class="col">
                      Date
                    </div>

                  </div>
                  <% comment.replies.each do |reply| %>
                    <div class="row">
                      <div class="col">
                        <p><%= reply.reply %></p>
                      </div>
                      <div class="col">
                        <p><%= reply.user.name %></p>
                      </div>
                      <div class="col">
                        <p><%= reply.created_at.strftime("%m/%d/%y") %></p>
                      </div>
                    </div>
                  <% end %> 
                </div>
              <% end %>
                <hr>
                
            
            <% end %>
          </div> 
    </div>
  </div>
</div>