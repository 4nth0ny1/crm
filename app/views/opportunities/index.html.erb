<p id="notice"><%= notice %></p>

<div class="head-container">
  <h1>Opportunities</h1>
  <%= link_to 'Create Opportunity', new_opportunity_path, class:"btn btn-primary" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opportunities.each do |opportunity| %>
      <tr>
        <td><%= opportunity.products %></td>
        <td><%= opportunity.contacts %></td>
        <td><%= link_to 'Show', opportunity %></td>
        <td><%= link_to 'Edit', edit_opportunity_path(opportunity) %></td>
        <td><%= link_to 'Destroy', opportunity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
