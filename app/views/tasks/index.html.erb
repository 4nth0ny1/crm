<p id="notice"><%= notice %></p>

<div class="head-container">
  <h1>Tasks</h1>


</div>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Notes</th>
      <th>Contact</th>
       <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @tasks.each do |task| %>
      <% if current_user.id == task.user_id %>
      <tr>
        <td><%= task.date %></td>
        <td><%= link_to task.notes, task %></td>
        <td><%= link_to task.contact.name, task.contact %></td>
        <td><%= link_to task.account.company_name, task.account %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


