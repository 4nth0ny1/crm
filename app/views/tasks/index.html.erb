<p id="notice"><%= notice %></p>

<div class="head-container">
  <h1>Tasks</h1>
  <%= link_to 'Create Task', new_task_path, class:"btn btn-primary" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Notes</th>
      <th>Contact</th>
       <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @tasks.each do |task| %>
      <% if current_user.id == task.user_id %>
      <tr>
        <td><%= task.date %></td>
        <td><%= task.notes %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>


