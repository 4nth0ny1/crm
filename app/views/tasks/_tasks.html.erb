<table class="table">
    <thead>
        <h3>Tasks</h3>
            <tr>
                <th>Date </th>
                <th>Contact </th>
                <th>Notes </th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <% tasks.each do |task| %>
                    <td><%= task.date.strftime("%m/%d/%Y: %I:%M%p")  %></td>
                    <% if task.contact %>
                        <td><%= link_to task.contact.name, contact_path(task.contact) %></td>
                    <% end %>
                    <td><%= task.notes %></td>
                    <td><%= link_to "Show", task_path(task) %></td>
            </tr>
                <% end %>   
        </tbody>
</table>

