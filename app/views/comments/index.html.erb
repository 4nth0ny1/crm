<p id="notice"><%= notice %></p>

<div class="head-container">
  <h1>My Comments</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.created_at.strftime("%m/%d/%Y @ %I:%M%p") %></td>
        <td><%= comment.title %></td>
        <td><%= comment.description %></td>
        <td><%= link_to "Show", comment %></td>
  

      </tr>
    <% end %>
  </tbody>
</table>

<br>


