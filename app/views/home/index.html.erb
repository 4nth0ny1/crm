<div class="home-container">
  <p id='notice'><%= notice %></p>
  <div class="text-home-container">
    <h1>Rails CRM</h1><br>
    <p class="line-1 anim-typewriter">training not required</p>

    <% if current_user %>
      Logged in as <%= current_user.email %>.
      <%= link_to 'Log Out', logout_path %>
    <% else %>
      <button type="button" class="btn"><%= link_to 'Sign Up', signup_path %></button>
      <button type="button" class="btn"><%= link_to 'Log In', login_path %></button>
    <% end %>
  </div>
</div>