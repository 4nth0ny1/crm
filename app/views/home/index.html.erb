 <p id='notice'><%= notice %></p>
 <div class="show-container">
  <div class="home-container">
    <div class="text-home-container">
      <h1>Rails CRM</h1><br>
      <p class="line-1 anim-typewriter">training not required</p>

      <% if current_user %>
        Logged in as <%= current_user.email %>.
        <%= link_to 'Log Out', logout_path %>
      <% else %>
        <button type="button" class="btn text-decoration-none text-white btn-primary"><%= link_to 'Sign Up', signup_path, class:"text-white text-decoration-none" %></button>
        <button type="button" class="btn btn-info"><%= link_to 'Log In', login_path, class:"text-white text-decoration-none" %></button>
      <% end %>
    </div>
  </div>
</div>

<div class="container section-2">
  <h2 class="section-header-title">Our Clients</h2>
    <div class="row">
    <% @accounts.each do |account| %>
        <div class="col-4">
          <div class="headlines-right">
            <h4><%= account.company_name%></h4>
          </div>
        </div>
    <% end %>
    </div>
</div>

<div class="container section-2">
  <h2 class="section-header-title">Our Products</h2>
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-3 card">
        <% if product.image_link %>
          <%= image_tag(product.image_link, width:"200") %>
        <% end %>
          <div class="headlines-right">
            <h4><%= product.name%></h4>
            <h5><%= product.description %></h5>
            <%= button_to "Learn More", login_path, class: "btn button-home-page btn-outline-primary text-primary", method: :get %>
          </div>
        </div>
      <% end %> 
    </div>
</div>